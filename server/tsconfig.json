{
  "extends": "@tsconfig/node20/tsconfig.json",

  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "dist",
    "sourceMap": true,

    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Node",

    "strict": true,
    "verbatimModuleSyntax": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,

    "types": ["vitest/globals"],

    "paths": {
      "@/*": ["./src/*"],
      "@tests/*": ["./tests/*"],
    },
  },
}
